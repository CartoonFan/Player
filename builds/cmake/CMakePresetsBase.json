{
	"version": 4,
	"configurePresets": [
		{
			"name": "base",
			"displayName": "base preset",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "win-base",
			"displayName": "windows base preset",
			"hidden": true,
			"cacheVariables": {
				"toolchainFile": "$env{EASYRPG_BUILDSCRIPTS}/windows/vcpkg/scripts/buildsystems/vcpkg.cmake"
			},
			"inherits": ["base"],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "dkp",
			"displayName": "devkitPro base preset (does nothing, maybe useful later)",
			"hidden": true,
			"inherits": ["base"]
		},
		{
			"name": "build-liblcf",
			"displayName": "enables building of liblcf",
			"hidden": true,
			"cacheVariables": {
				"PLAYER_BUILD_LIBLCF": "ON"
			}
		},
		{
			"name": "build-libretro",
			"displayName": "enables building of a libretro core",
			"hidden": true,
			"cacheVariables": {
				"PLAYER_TARGET_PLATFORM": "libretro"
			}
		}
	]
}
